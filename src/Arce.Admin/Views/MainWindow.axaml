<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Arce.Admin.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Arce.Admin.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Arce.Admin"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  
  <ExperimentalAcrylicBorder>
               <ExperimentalAcrylicBorder.Material>
                   <ExperimentalAcrylicMaterial
                       BackgroundSource="Digger"
                       TintColor="Black"
                       TintOpacity="1"
                       MaterialOpacity="0.65" />
               </ExperimentalAcrylicBorder.Material>
  <DockPanel>
    <Rectangle Fill="Red" Height="50" DockPanel.Dock="Top"/>
    <Border Background="Gray"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="2"
            Padding="2">
      <StackPanel Width="100" DockPanel.Dock="Left" Spacing="5" VerticalAlignment="Bottom">
        <Button Command="{Binding RefreshCommand}" Padding="10" Height="45" Width="100">Refresh</Button>
        <Button Command="{Binding NewCommand}" Padding="10" Height="45" Width="100">New</Button>
        <Rectangle Fill="Orange" Height="44"/>
      </StackPanel>
    </Border>

    <ScrollViewer>

      <ItemsRepeater Items="{Binding Games}">
        <ItemsRepeater.Layout>
          <UniformGridLayout MinItemWidth="200"
                             MinItemHeight="200"
                             MinColumnSpacing="2"
                             MinRowSpacing="5"
                             ItemsStretch="Fill"
                             ItemsJustification="Start"
                             />
        </ItemsRepeater.Layout>
        
        
        <ItemsRepeater.ItemTemplate>
          <DataTemplate DataType="{x:Type vm:GameBlockItem}">
            <Border Background="Gray"
                    BorderBrush="Black"
                    BorderThickness="10"
                    CornerRadius="10"
                    Padding="5">
              <StackPanel>
                <TextBlock Text="{Binding Name}"/>
                <Button Command="{Binding ClickCommand}">
                  Edytuj
                </Button>
                <Button Command="{Binding DeleteCommand}">
                  Usu≈Ñ
                </Button>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsRepeater.ItemTemplate>
      </ItemsRepeater>

    </ScrollViewer>

  </DockPanel>
  </ExperimentalAcrylicBorder>

  

</Window>